<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для имени продукта -->
    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Name" />

    <!-- Поле для количества продукта -->
    <EditText
        android:id="@+id/product_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Product Count"
        android:inputType="numberDecimal" />

    <!-- Spinner для выбора списка -->
    <Spinner
        android:id="@+id/spinner_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Spinner для выбора типа продукта -->
    <Spinner
        android:id="@+id/spinner_count_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Чекбокс для состояния "выбрано" -->
    <CheckBox
        android:id="@+id/checkbox_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checked" />

    <!-- Кнопка для сохранения продукта -->
    <Button
        android:id="@+id/button_save_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Product" />
</LinearLayout>